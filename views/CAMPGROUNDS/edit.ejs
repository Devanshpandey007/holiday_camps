<% layout('../layouts/boilerplate') %>
<link rel="stylesheet" href="/style/style.css">


<div class="main-body">
    <div class="row">
        <h1 class="text-center"> Edit Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label class="form-labe;" for="Title">Title</label>
                    <input class="form-control" type="text" name="title" id="Title" value= "<%= campground.title %>" required>
                </div>
                <div class="mb-3">
                    <label class="form-labe" for="Image">Image Url</label>
                    <input class="form-control" type="text" name="image" id="Image" value= "<%= campground.image %>" required>
                </div>
                <div class="mb-3">
                    <label class="form-labe" for="Price">Price</label>
                    <div class="input-group">
                        <div class="input-group-text">$</div>
                        <input class="form-control" type="number" name="price" id="Price" placeholder="0.00" value= "<%= campground.price %>" required>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-labe" for="Location">Location</label>
                    <input class="form-control" type="text" name="location" id="Location" value= "<%= campground.location %>" required>
                </div>
                <div class="mb-3">
                    <label class="form-labe" for="Description">Description</label>
                    <textarea class="form-control" name="description" id="Description" required><%= campground.description %></textarea>
                </div>
                <br>
                <button class="btn btn-primary">Save Campground</button>
                <div class="mt-3 mb-3">
                    <a class="mb-3" href="/campgrounds/<%= campground._id %>">back to campground</a>
                </div>
                </form>
        </div>
    </div>
</div>
