<% layout('../layouts/boilerplate') %>
<link rel="stylesheet" href="/style/style.css">

<div class="main-body">
    <div class="container m-0">
        <div class="row"> 
            <div class="col-2"></div>
            <div class="col">
                <form action="/user/<%= user._id %>?_method=PATCH" method="post" class="needs-validation" enctype="multipart/form-data" novalidate>
                    <div class="mb-3 row">
                        <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="staticEmail" name="email" placeholder="example@gmail.com" value= "<%= user.email%>" required>
                            <div class="valid-feedback">Looks good!</div>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label for="inputUsername" class="col-sm-2 col-form-label">Username</label>
                        <div class="col-sm-10">
                            <input type="text" readonly class="form-control" id="inputUsername" name="username" value= "<%= user.username %>" required>
                            <div class="valid-feedback">Looks good!</div>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label for="img" class="col-sm-2 col-form-label">Image</label>
                        <div class="col-sm-10 d-flex align-items-center">
                            <input type="file" class="form-control ms-2" id="img" name="img">
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label for="inputBio" class="col-sm-2 col-form-label">Bio</label>
                        <div class="col-sm-10">
                            <textarea rows="4" cols="auto" class ="form-control" name="bio" id="inputBio"><%= user.bio %></textarea>
                            <div class="valid-feedback">Looks good!</div>
                        </div>
                    </div>
                    <div class="d-flex flex-row-reverse">
                        <button class="btn btn-primary">Update Profile</button>
                    </div>
                </form>
            </div>
            <div class="col-2"></div>
        </div>
    </div>
</div>
